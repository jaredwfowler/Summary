<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/achievements">

    <TextView
            android:text="@string/achievements_title"
            android:textSize="40sp"
            android:textColor="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_achievements_title" android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/golden_star" android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/textView_achievements_title"
            android:layout_toLeftOf="@+id/textView_achievements_title"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/golden_star"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView_achievements_title"
            android:layout_alignBottom="@+id/textView_achievements_title"
            />
    <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="1"
            android:gravity="center"
            android:id="@+id/achievements_grid"
            android:layout_below="@+id/textView_achievements_title"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>